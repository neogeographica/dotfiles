let data_dir = has('nvim') ? stdpath('data') . '/site' : '~/.vim'
if empty(glob(data_dir . '/autoload/plug.vim'))
  silent execute '!curl -fLo '.data_dir.'/autoload/plug.vim --create-dirs  https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'
  autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
endif
call plug#begin()
" see https://github.com/junegunn/fzf.vim
if executable('fzf')
  Plug 'junegunn/fzf'
  Plug 'junegunn/fzf.vim'
endif
Plug 'mhinz/vim-startify'
Plug 'airblade/vim-gitgutter'
Plug 'tpope/vim-fugitive'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
call plug#end()

" only used by old statusline
"function! HasPaste()
"    if &paste
"        return 'PASTE MODE  '
"    endif
"    return ''
"endfunction

" old non-airline statusline
"set statusline=\ %{HasPaste()}%F%m%r%h\ %w\ %=\ Line:\ %-4l\ Column:\ %-3c

set history=500
set background=dark
set showcmd
set ignorecase
set smartcase
set incsearch
set showmatch
set matchtime=3
set wildmenu
set wildmode=longest:full,full
set ruler
set laststatus=2
set signcolumn=auto

" decrease updatetime to make gitgutter more snappy
set updatetime=500

" startify config
let g:startify_custom_header=''

" airline config
let g:airline_powerline_fonts = 1
let g:airline_skip_empty_sections = 1

" airline theme
"let g:airline_theme='base16_eighties'
"let g:airline_theme='base16_monokai'
"let g:airline_theme='cobalt2'
"let g:airline_theme='distinguished'
let g:airline_theme='jellybeans'
"let g:airline_theme='lessnoise'
"let g:airline_theme='minimalist'

if has("syntax")
    if !exists("g:syntax_on")
        syntax on
    endif
endif

map <leader>n :setlocal nu! rnu!<cr>
map <leader>p :setlocal paste!<cr>

inoremap jk <esc>
cnoremap jk <C-c>
